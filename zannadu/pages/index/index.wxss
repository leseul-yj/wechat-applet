.binner {
  width: 750rpx;
}

swiper-item {}

.binner image {
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}

.itinerary_nav {
  display: flex;
  flex-wrap: wrap;
}

.itinerary_item {
  width: 25%;
  text-align: center;
}

.itinerary_icon {
  width: 64px;
  height: 64px;
  border-radius: 50%;
}

.txtTitle {
  height: 50rpx;
  font-size: 20px;
  padding: 10px;
  position: relative;
  padding-left: 40rpx;
}

.txtTitle::before {
  position: absolute;
  left: 10rpx;
  top: 30rpx;
  content: " ";
  height: 20px;
  width: 10rpx;
  background: burlywood;
}

.limitItem {
  width: 100%;
  padding: 20rpx;
}
.limitItem image{
  width: 100%;
}
.topItem {
  display: flex;
  padding: 20rpx;
}

.topItem .item {
  width: 30%;
  margin-right: 20rpx;
}

.topItem .item image {
  width: 100%
}
.topItem .item:last-child {
  margin-right: 0;
}